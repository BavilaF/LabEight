{% extends 'base.html.twig' %}

{% block title %}Add an icon{% endblock %}

{% block body %}

<div>

  {{ form_start(form) }}

  <div class="form-group">
    {{ form_label(form.icon) }}
    {{ form_widget(form.icon, { 'attr': {'class' : 'form-control'} }) }}
  </div>

  <div>
    {{ form_widget(form.save, { 'attr': {'class' : 'btn btn-primary'} }) }}
  </div>

  {{ form_end(form) }}

</div>

{% endblock %}
